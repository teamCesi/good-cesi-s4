{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}

    <h1 class="text-center">Liste des catégories</h1>
    <div class="line-title mb-5"></div>

    <div id="content-create">
      <a href="{{ path('categorie_new') }}"class="btn btn-primary">Créer !</a>    
    </div>

    <div class="container">
      <ul class="list-group">
        {% for categorie in categories %}
          <li class="list-group-item">
            <h2>{{ categorie.nom }}</h2><a href="{{ path('categorie_edit', {'id': categorie.id}) }}"class="btn btn-primary">Editer</a>     
          </li>
        {% endfor %}
      </ul>
    </div>

{% endblock %}