{% extends 'base.html.twig' %}

{% block title %}Détail de l'utilisateur{{ utilisateur.nom }}!{% endblock %}

{% block body %}

        <div class="center">
                <h1>{{ utilisateur.nom }} {{ utilisateur.prenom | upper }}</h1>
                <p>Adresse : {{ utilisateur.adresse }}</p>
                <p>Email : {{ utilisateur.email }}</p>
                <hr>
                <h2>Articles en vente : {{ utilisateur.articles | length }} </h2>
                {% for article in utilisateur.articles %} 
                        <h3>Nom de l'article : {{ article.nom }}</h3>
                        <img src="{{ article.image }}">
                        <p>Prix : {{ article.prix }}</p>
                        <p>Date de création : {{ article.dateCreation | date('d/m/Y') }}</p>
                {% endfor %}
                {% if is_granted("ROLE_ADMIN") == true %}
                <a href="{{ path('utilisateur_edit', {'id': utilisateur.id}) }}">Modifier l'utilisateur</a>
                <a href="{{ path('utilisateur_delete', {'id': utilisateur.id}) }}">Supprimer</a>
                {% endif %}
        </div>

{% endblock %}
